{
  "manifest_version": 3,
  "name": "MEXC Balance Splitter",
  "description": "Parses the MEXC page balance (no API), computes 1% and splits it into 3 parts with a small on-page widget.",
  "version": "0.1.0",
  "permissions": ["storage", "nativeMessaging", "clipboardWrite"],
  "host_permissions": [
    "https://www.mexc.com/*",
    "https://futures.mexc.com/*",
    "https://contract.mexc.com/*",
    "https://www.mexc.sg/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.mexc.com/*",
        "https://futures.mexc.com/*",
        "https://contract.mexc.com/*",
        "https://www.mexc.sg/*"
      ],
      "js": ["content.js"],
      "css": ["overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "MEXC Balance Splitter"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "mexc-balance-splitter@example.com",
      "strict_min_version": "109.0"
    }
  }
}
